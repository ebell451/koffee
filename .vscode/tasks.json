{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "tool restore",
      "type": "shell",
      "command": "dotnet",
      "args": ["tool", "restore"],
      "presentation": {
        "reveal": "silent"
      }
    },
    {
      "label": "build all",
      "type": "shell",
      "command": "dotnet",
      "args": ["fake", "build", "-t", "buildAll"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": ["tool restore"],
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "build app",
      "type": "shell",
      "command": "dotnet",
      "args": ["fake", "build", "-t", "buildApp"],
      "group": "build",
      "dependsOn": ["tool restore"],
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "test all",
      "type": "shell",
      "command": "dotnet",
      "args": ["test"],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "test by name",
      "type": "shell",
      "command": "dotnet",
      "args": ["test", "--logger='console;verbosity=detailed'", "--filter='FullyQualifiedName~${input:testFilter}'"],
      "group": "test",
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "testFilter",
      "description": "Test Name Filter:",
      "type": "promptString"
    }
  ]
}
